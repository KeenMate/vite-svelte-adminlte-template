.list-group-item {
	padding: 0 .5rem;
}

.context-menu-label {
	display: block;
}

.context-menu-entry,
.context-menu-label {
	padding: .3rem .75rem !important;
	min-width: 15rem;

	&:not(:last-child) {
		border-bottom: 1px solid #ebebeb;

	}

	&:hover {
		background-color: #ebebeb;
		cursor: pointer;
	}

	&.danger {
		background-color: #d73925;
		color: white;
	}

	&.success {
		background-color: #00a65a;
		color: white;
	}

	&.info {
		background-color: #00c0ef;
		color: white;
	}
}

.modal {
	--modal-padding: .5rem;

	.modal-dialog {
		.modal-header {
			padding: var(--modal-padding);

			.close {
				padding: 0 .5rem;
				margin: 0 !important;
			}

			.modal-title {
				line-height: 1;
			}
		}

		.modal-body {
			padding: var(--modal-padding);
		}

		.modal-footer {
			gap: .25rem;
			padding: var(--modal-padding);

			.btn {
				margin: 0 !important;
			}
		}

		.overlay {
			background-color: rgba(255, 255, 255, .7) !important;
		}
	}
}

.pagination {
	.page-link {
		line-height: 1.5 !important;
	}
}

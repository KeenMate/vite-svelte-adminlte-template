body p, body a, body {
	line-height: 1 !important;
}

.content-wrapper {
	.content:first-child {
		padding-top: .5rem;
	}

	.content {
		padding: 0 1.5rem 1.5rem;

		& > .content-header {
			padding-top: calc(15px - .5rem);
		}
	}
}

.main-footer {
	padding-left: 1.5rem;
	padding-right: 1.5rem;
}

.btn-warning {
	background-color: #fc0 !important;
	color: black;
}

.bg-transparent {
	background-color: transparent;
}

.info-box-icon {
	line-height: inherit !important;
	background-color: rgba(0, 0, 0, 0);
}

nav.main-header {
	padding: .25rem;
	padding-left: .65rem;
}

aside.main-sidebar {
	a.brand-link {
		padding: .55rem;
	}
}

.page-header {
	margin-bottom: 0;
}

.navbar-toggle {
	color: inherit !important;
}

.navbar a {
	color: black;
}

.navbar-nav .nav-item:first-child {
	position: relative;
	top: 1px;
}

.form-group {
	align-items: center;
	
	&.row {
		label {
			margin-bottom: 0 !important;
		}
	}
}

.card {
	.card-header {
		display: flex;
		align-items: center;
		justify-content: space-between;
		flex-wrap: wrap;
		gap: .25rem;
		min-height: 2.5rem !important;
		padding: 0.75rem 1.25rem 0.75rem 0.5rem;
		//padding: .5rem .5rem 0 .5rem;

		&::after {
			content: none;
		}

		.form-group {
			margin-bottom: 0 !important;
		}

		.card-title {
			display: flex;
			align-items: baseline;
			gap: .25rem;

			& > * {
				vertical-align: middle;
			}
		}

		.card-tools {
			margin: -.25rem -.8rem -.25rem 0
		}
	}

	.card-body {
		padding: .5rem;
	}
}


.content-header {
	padding: 0 !important;

	.container-fluid {
		padding: 0 !important;
	}
}

.badge {
	border-radius: 0;
	display: inline-flex;
	justify-content: center;
	align-items: center;
	padding: .3rem .4rem;
}

.main-header {
	.nav-item {
		.nav-link {
			display: inline-flex;
			align-items: center;
			gap: .5rem;
		}
	}
}

.nav-item {
	.nav-link {
		padding: .3rem .5rem;
	}
}

.auto-width {
	width: 1px;
}

th.auto-width {
	white-space: nowrap;
}

